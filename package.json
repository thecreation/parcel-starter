{
  "name": "parcel-starter",
  "version": "0.0.1",
  "description": "A starter kit for building web projects with modern JavaScript",
  "main": "src/index.js",
  "scripts": {
    "clean": "rimraf ./dist",
    "format": "prettier --write src/**/*.{js,json,scss,md}",
    "build": "npm run clean && parcel build src/index.html --no-source-maps --no-cache",
    "start": "parcel src/index.html --open --no-cache",
    "watch": "parcel watch src/index.html",
    "lint:es": "eslint --ignore-path .gitignore \"src/**/*.js\"",
    "lint:style": "stylelint \"src/**/*.scss\"",
    "lint": "npm run lint:es && npm run lint:style"
  },
  "author": "Creation Studio Limited",
  "license": "MIT",
  "devDependencies": {
    "babel-minify": "^0.4.3",
    "babel-preset-env": "^1.7.0",
    "babel-preset-minify": "^0.4.3",
    "eslint": "^5.0.1",
    "eslint-config-airbnb-base": "^13.0.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-prettier": "^2.6.1",
    "node-sass": "^4.9.0",
    "parcel-bundler": "^1.9.4",
    "parcel-plugin-handlebars": "^0.4.4",
    "postcss-preset-env": "^5.2.1",
    "prettier": "^1.13.7",
    "stylelint": "^9.3.0",
    "stylelint-config-idiomatic-order": "^5.0.0",
    "stylelint-config-prettier": "^3.3.0",
    "stylelint-config-recommended-scss": "^3.2.0",
    "stylelint-scss": "^3.1.3"
  },
  "browserslist": [
    "> 1%",
    "ie >= 11",
    "Chrome >= 45",
    "Firefox >= 38",
    "Edge >= 12",
    "Explorer >= 10",
    "iOS >= 9",
    "Safari >= 9",
    "Android >= 4.4",
    "Opera >= 30"
  ],
  "dependencies": {
    "autoprefixer": "^8.6.4",
    "bootstrap": "^4.1.1",
    "jquery": "^3.3.1",
    "parcel-bundler": "^1.9.4",
    "popper.js": "^1.14.3",
    "rimraf": "^2.6.2"
  }
}
